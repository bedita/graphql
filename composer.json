{
    "name": "bedita/graphql",
    "type": "cakephp-plugin",
    "description": "GraphQL plugin for BEdita",
    "keywords": ["graphql", "cakephp", "cake3", "plugin", "bedita"],
    "license": "LGPL-3.0",
    "support": {
        "source": "https://github.com/bedita/graphql",
        "issues": "https://github.com/bedita/graphql/issues"
    },
    "require": {
        "webonyx/graphql-php": "~14.11.5",
        "cakephp/cakephp": "~4.3.0",
        "bedita/api": "dev-experiment/cakephp4",
        "bedita/core": "dev-experiment/cakephp4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "cakephp/cakephp-codesniffer": "~4.5.1",
        "phpstan/phpstan": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\GraphQL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\GraphQL\\Test\\": "tests",
            "BEdita\\Core\\Test\\": "./vendor/bedita/core/tests",
            "BEdita\\API\\Test\\": "./vendor/bedita/api/tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
